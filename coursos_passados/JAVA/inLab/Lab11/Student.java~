/**creates a student object*/
public class Student
{
	private String name;
	private double score;

/*default constructor*/
	public Student()
	{
	}
/*predefined variables*/
	public Student(String n, double s)
	{
		setName(n);
		setScore(s);
	}
/*sets Name of student*/
	public void setName(String n)
	{
		name = n;
	}
/*sets scores of student*/
	public void setScore(double s)
	{
		score = s;
	}
/*returns name of student*/
	public String getName()
	{
		return name;
	}
/*returns score of student*/
	public double getScore()
	{
		return score;
	}
/*prints student data easily*/
	public String toString(String name, double score)
	{
		String info = "Name: "+name+"|  Score: "+score;
		return info;	
	}

}
